package main

import (
    "fmt"
)

func main() {
    //ä¿å­˜éœ€è¦æ’åºçš„Slice
    arr := []int{9, 3, 3, 4, 7, 2, 4, 7, 2, 1, 4, 7, 2, 11, 12, 11, 18, 19, 12,
	 3, 4, 7, 2, 1, 0, 11, 12, 11, 13, 4, 7, 2, 1, 0, 11, 12, 11, 18,0,1,0,1}

    //å®é™…ç”¨äºæ’åºçš„Slice
    list := make([]int, len(arr))

    copy(list, arr)
    QuickSort(list)
    fmt.Println("å¿«é€Ÿæ’åºï¼š\t", list)

    copy(list, arr)
    QuickSortX(list)
    fmt.Println("å¿«é€Ÿæ’åºXï¼š\t", list)

    copy(list, arr)
    list = MergeSort(list)
    fmt.Println("äºŒè·¯å½’å¹¶æ’åºï¼š\t", list)
	
    copy(list, arr)
    BubbleSort(list)
    fmt.Println("å†’æ³¡æ’åºï¼š\t", list)

    copy(list, arr)
    BubbleSortX(list)
    fmt.Println("å†’æ³¡æ’åºXï¼š\t", list)

    copy(list, arr) //å°†arrçš„æ•°æ®è¦†ç›–åˆ°listï¼Œé‡ç½®list
    InsertSort(list)
    fmt.Println("ç›´æ¥æ’å…¥æ’åºï¼š\t", list)

    copy(list, arr)
    ShellSort(list)
    fmt.Println("å¸Œå°”æ’åºï¼š\t", list)

    copy(list, arr)
    SelectSort(list)
    fmt.Println("ç®€å•é€‰æ‹©æ’åºï¼š\t", list)

    copy(list, arr)
    HeapSort(list)
    fmt.Println("å †æ’åºï¼š     \t", list)

}


//region å¿«é€Ÿæ’åº
/*
æ­¥éª¤ï¼š
1.ä»æ•°åˆ—ä¸­æŒ‘å‡ºä¸€ä¸ªå…ƒç´ ä½œä¸ºåŸºå‡†æ•°
2.åˆ†åŒºè¿‡ç¨‹ï¼Œå°†æ¯”åŸºå‡†æ•°å¤§çš„æ”¾åˆ°å³è¾¹ï¼Œå°äºæˆ–ç­‰äºå®ƒçš„æ•°éƒ½æ”¾åˆ°å·¦è¾¹ã€‚(æ¯æ¬¡å½’ä½ä¸€ä¸ªåŸºå‡†æ•°åˆ°å®ƒæœ€ç»ˆåº”è¯¥åœ¨çš„ä½ç½®)
3.å†å¯¹å·¦å³åŒºé—´é€’å½’æ‰§è¡Œç¬¬äºŒæ­¥ï¼Œç›´è‡³å„åŒºé—´åªæœ‰ä¸€ä¸ªæ•°
PS:
å¿«é€Ÿæ’åºé‡Œé¢æ¯”è¾ƒç²¾å¦™ï¼Œè¦æ³¨æ„åŸºå‡†æ•°çš„é€‰æ‹©å’Œå“¨å…µæŒ‡é’ˆç§»åŠ¨çš„å…ˆåé¡ºåº
*/
func QuickSort(list []int) {
    if len(list) &lt;= 1 {
        return
    }
    var low int = 0
    var high int = len(list) - 1
    //ä»¥list[0]ä¸ºåŸºå‡†æ•°
    for low &lt; high {
        if list[high] &gt;= list[0] {
            high--
            continue
        }
        if list[low] &lt;= list[0] {
            low++
            continue
        }

        list[low], list[high] = list[high], list[low]
    }
    //low == high
    if list[low] &lt; list[0] {
        list[low], list[0] = list[0], list[low]
    }
    QuickSort(list[:low])
    QuickSort(list[low+1:])
}

func QuickSortX(list []int) {
    if len(list) &lt;= 1 {
        return
    }
    key, i := list[0], 1
    low, high := 0, len(list)-1
    for low &lt; high {
        if list[i] &gt; key {
            list[i], list[high] = list[high], list[i]
            high--
        } else {
            list[i], list[low] = list[low], list[i]
            low++
            i++
        }
    }
    QuickSortX(list[:low])
    QuickSortX(list[low+1:])
}
//endregion

//region äºŒè·¯å½’å¹¶æ’åº
/*
æ­¥éª¤:
1.å°†å¾…æ’åºåºåˆ—R[0...n-1]çœ‹æˆæ˜¯nä¸ªé•¿åº¦ä¸º1çš„æœ‰åºåºåˆ—ï¼Œå°†ç›¸é‚»çš„æœ‰åºè¡¨æˆå¯¹å½’å¹¶ï¼Œå¾—åˆ°n/2ä¸ªé•¿åº¦ä¸º2çš„æœ‰åºè¡¨ï¼›
2.å°†è¿™äº›æœ‰åºåºåˆ—å†æ¬¡å½’å¹¶ï¼Œå¾—åˆ°n/4ä¸ªé•¿åº¦ä¸º4çš„æœ‰åºåºåˆ—ï¼›
3.å¦‚æ­¤åå¤è¿›è¡Œä¸‹å»ï¼Œæœ€åå¾—åˆ°ä¸€ä¸ªé•¿åº¦ä¸ºnçš„æœ‰åºåºåˆ—ã€‚

å½’å¹¶æ’åºå…¶å®è¦åšä¸¤ä»¶äº‹ï¼š
ï¼ˆ1ï¼‰â€œåˆ†è§£â€â€”â€”å°†åºåˆ—æ¯æ¬¡æŠ˜åŠåˆ’åˆ†ã€‚
ï¼ˆ2ï¼‰â€œåˆå¹¶â€â€”â€”å°†åˆ’åˆ†åçš„åºåˆ—æ®µä¸¤ä¸¤åˆå¹¶åæ’åºã€‚
*/
func MergeSort(list []int) []int {   //ç€é‡ç†è§£è¯¥å‡½æ•°
	if len(list) &lt;= 1 {
        return list
    } 
    mid := len(list)/2
    left := MergeSort(list[:mid])
    right := MergeSort(list[mid:])
    return merge(left,right)
}

func merge(left, right []int) (result []int) {
    i,j := 0,0
    for i &lt; len(left) &amp;&amp; j &lt; len(right){
        if left[i] &lt; right[j]{
            result = append(result,left[i])
			i++
        }else{
            result = append(result,right[j])
			j++
        }
    }
    result = append(result, left[i:]...)
    result = append(result, right[j:]...)
    return
}
//endregion

//region å†’æ³¡æ’åº
/*
æ­¥éª¤ï¼š
1.æ¯”è¾ƒç›¸é‚»çš„å…ƒç´ ã€‚å¦‚æœç¬¬ä¸€ä¸ªæ¯”ç¬¬äºŒä¸ªå¤§ï¼Œå°±äº¤æ¢ä»–ä»¬ä¸¤ä¸ª
2.å¯¹æ¯ä¸€å¯¹ç›¸é‚»å…ƒç´ ä½œåŒæ ·çš„å·¥ä½œï¼Œä»å¼€å§‹ç¬¬ä¸€å¯¹åˆ°ç»“å°¾çš„æœ€åä¸€å¯¹ã€‚åœ¨è¿™ä¸€ç‚¹ï¼Œæœ€åçš„å…ƒç´ åº”è¯¥ä¼šæ˜¯æœ€å¤§çš„æ•°
3.é’ˆå¯¹æ‰€æœ‰çš„å…ƒç´ é‡å¤ä»¥ä¸Šçš„æ­¥éª¤ï¼Œé™¤äº†æœ€åä¸€ä¸ª
4.æŒç»­æ¯æ¬¡å¯¹è¶Šæ¥è¶Šå°‘çš„å…ƒç´ é‡å¤ä¸Šé¢çš„æ­¥éª¤ï¼Œç›´åˆ°æ²¡æœ‰ä»»ä½•ä¸€å¯¹æ•°å­—éœ€è¦æ¯”è¾ƒ
*/
func BubbleSort(list []int) {
    for i := 0; i &lt; len(list)-1; i++ {
        for j := 0; j &lt; len(list)-i-1; j++ {
            if list[j] &gt; list[j+1] {
                list[j], list[j+1] = list[j+1], list[j]
            }
        }
    }
}

//ä¼˜åŒ–ï¼šå¦‚æœæ²¡æœ‰äº¤æ¢å‘ç”Ÿï¼Œä»£è¡¨å·²ç»æœ‰åºï¼Œå³å¯ç»“æŸ
func BubbleSortX(list []int) {
    var exchange bool = false
    for i := 0; i &lt; len(list)-1; i++ {
        for j := 0; j &lt; len(list)-i-1; j++ {
            if list[j] &gt; list[j+1] {
                list[j], list[j+1] = list[j+1], list[j]
                exchange = true
            }
        }
        if !exchange {
            break
        }
        exchange = false
    }

}
//endregion

//region æ’å…¥æ’åº
/*
æ­¥éª¤ï¼š
1.ä»ç¬¬ä¸€ä¸ªå…ƒç´ å¼€å§‹ï¼Œè¯¥å…ƒç´ å¯ä»¥è®¤ä¸ºå·²ç»è¢«æ’åº
2.å–å‡ºä¸‹ä¸€ä¸ªå…ƒç´ ï¼Œåœ¨å·²ç»æ’åºçš„å…ƒç´ åºåˆ—ä¸­ä»åå‘å‰æ‰«æ
3.å¦‚æœè¢«æ‰«æçš„å…ƒç´ ï¼ˆå·²æ’åºï¼‰å¤§äºæ–°å…ƒç´ ï¼Œå°†è¯¥å…ƒç´ åç§»ä¸€ä½
4.é‡å¤æ­¥éª¤3ï¼Œç›´åˆ°æ‰¾åˆ°å·²æ’åºçš„å…ƒç´ å°äºæˆ–è€…ç­‰äºæ–°å…ƒç´ çš„ä½ç½®
5.å°†æ–°å…ƒç´ æ’å…¥åˆ°è¯¥ä½ç½®å
6.é‡å¤æ­¥éª¤2~5
*/
func InsertSort(list []int) {
    var temp, i, j int
    for i = 1; i &lt; len(list); i++ {
        temp = list[i]
        for j = i - 1; j &gt;= 0 &amp;&amp; list[j] &gt; temp; j-- {
            list[j+1] = list[j]
        }
        list[j+1] = temp
    }
}

//region å¸Œå°”æ’åº
/*
åŸºæœ¬æ€æƒ³ï¼š
æŠŠè®°å½•æŒ‰æ­¥é•¿ gap åˆ†ç»„ï¼Œå¯¹æ¯ç»„è®°å½•é‡‡ç”¨ç›´æ¥æ’å…¥æ’åºæ–¹æ³•è¿›è¡Œæ’åºã€‚
éšç€æ­¥é•¿é€æ¸å‡å°ï¼Œæ‰€åˆ†æˆçš„ç»„åŒ…å«çš„è®°å½•è¶Šæ¥è¶Šå¤šï¼Œå½“æ­¥é•¿çš„å€¼å‡å°åˆ° 1 æ—¶ï¼Œæ•´ä¸ªæ•°æ®åˆæˆä¸ºä¸€ç»„ï¼Œæ„æˆä¸€ç»„æœ‰åºè®°å½•ï¼Œåˆ™å®Œæˆæ’åºã€‚
*/
func ShellSort(list []int) {
    for gap := (len(list) + 1) / 2; gap &gt;= 1; gap = gap / 2 {
        for i := 0; i+gap &lt; len(list); i++ {
            InsertSort(list[i : i+gap+1])
        }
    }
}
//endregion

//region ç®€å•é€‰æ‹©æ’åº
/*
æ­¥éª¤ï¼š
1.åœ¨æœªæ’åºåºåˆ—ä¸­æ‰¾åˆ°æœ€å°ï¼ˆå¤§ï¼‰å…ƒç´ ï¼Œå­˜æ”¾åˆ°æ’åºåºåˆ—çš„èµ·å§‹ä½ç½®ã€‚
2.å†ä»å‰©ä½™æœªæ’åºå…ƒç´ ä¸­ç»§ç»­å¯»æ‰¾æœ€å°ï¼ˆå¤§ï¼‰å…ƒç´ ï¼Œç„¶åæ”¾åˆ°å·²æ’åºåºåˆ—çš„æœ«å°¾ã€‚
3.ä»¥æ­¤ç±»æ¨ï¼Œç›´åˆ°æ‰€æœ‰å…ƒç´ å‡æ’åºå®Œæ¯•ã€‚
*/
func SelectSort(list []int) {
    var index int
    for i := 0; i &lt; len(list)-1; i++ {
        index = i
        for j := i + 1; j &lt; len(list); j++ {
            if list[index] &gt; list[j] {
                index = j
            }
        }
        list[index], list[i] = list[i], list[index]
    }
}
//endregion


//region å †æ’åº
/*
æ­¥éª¤ï¼š
1.æ„é€ æœ€å¤§å †ï¼ˆBuild_Max_Heapï¼‰ï¼š
	è‹¥æ•°ç»„ä¸‹æ ‡èŒƒå›´ä¸º0~nï¼Œè€ƒè™‘åˆ°å•ç‹¬ä¸€ä¸ªå…ƒç´ æ˜¯å¤§æ ¹å †ï¼Œåˆ™ä»ä¸‹æ ‡n/2å¼€å§‹çš„å…ƒç´ å‡ä¸ºå¤§æ ¹å †ã€‚
äºæ˜¯åªè¦ä»n/2-1å¼€å§‹ï¼Œå‘å‰ä¾æ¬¡æ„é€ å¤§æ ¹å †ï¼Œè¿™æ ·å°±èƒ½ä¿è¯ï¼Œæ„é€ åˆ°æŸä¸ªèŠ‚ç‚¹æ—¶ï¼Œå®ƒçš„å·¦å³å­æ ‘éƒ½å·²ç»æ˜¯å¤§æ ¹å †ã€‚

2.å †æ’åºï¼ˆHeapSortï¼‰ï¼š
	ç”±äºå †æ˜¯ç”¨æ•°ç»„æ¨¡æ‹Ÿçš„ã€‚å¾—åˆ°ä¸€ä¸ªå¤§æ ¹å †åï¼Œæ•°ç»„å†…éƒ¨å¹¶ä¸æ˜¯æœ‰åºçš„ã€‚å› æ­¤éœ€è¦å°†å †åŒ–æ•°ç»„æœ‰åºåŒ–ã€‚
æ€æƒ³æ˜¯ç§»é™¤æ ¹èŠ‚ç‚¹ï¼Œå¹¶åšæœ€å¤§å †è°ƒæ•´çš„é€’å½’è¿ç®—ã€‚ç¬¬ä¸€æ¬¡å°†heap[0]ä¸heap[n-1]äº¤æ¢ï¼Œå†å¯¹heap[0...n-2]åšæœ€å¤§å †è°ƒæ•´ã€‚
ç¬¬äºŒæ¬¡å°†heap[0]ä¸heap[n-2]äº¤æ¢ï¼Œå†å¯¹heap[0...n-3]åšæœ€å¤§å †è°ƒæ•´ã€‚é‡å¤è¯¥æ“ä½œç›´è‡³heap[0]å’Œheap[1]äº¤æ¢ã€‚
ç”±äºæ¯æ¬¡éƒ½æ˜¯å°†æœ€å¤§çš„æ•°å¹¶å…¥åˆ°åé¢çš„æœ‰åºåŒºé—´ï¼Œæ•…æ“ä½œå®Œåæ•´ä¸ªæ•°ç»„å°±æ˜¯æœ‰åºçš„äº†ã€‚

3.æœ€å¤§å †è°ƒæ•´ï¼ˆMax_Heapifyï¼‰ï¼š
	è¯¥æ–¹æ³•æ˜¯æä¾›ç»™ä¸Šè¿°ä¸¤ä¸ªè¿‡ç¨‹è°ƒç”¨çš„ã€‚ç›®çš„æ˜¯å°†å †çš„æœ«ç«¯å­èŠ‚ç‚¹ä½œè°ƒæ•´ï¼Œä½¿å¾—å­èŠ‚ç‚¹æ°¸è¿œå°äºçˆ¶èŠ‚ç‚¹ ã€‚
*/
func heapAdjust(list []int, parent int, length int) {
	temp := list[parent]  // tempä¿å­˜å½“å‰çˆ¶èŠ‚ç‚¹
	child := 2*parent + 1 // å…ˆè·å¾—å·¦å­©å­

	for child &lt; length {
		// å¦‚æœæœ‰å³å­©å­ç»“ç‚¹ï¼Œå¹¶ä¸”å³å­©å­ç»“ç‚¹çš„å€¼å¤§äºå·¦å­©å­ç»“ç‚¹ï¼Œåˆ™é€‰å–å³å­©å­ç»“ç‚¹
		if child+1 &lt; length &amp;&amp; list[child] &lt; list[child+1] {
			child++
		}

		// å¦‚æœçˆ¶ç»“ç‚¹çš„å€¼å·²ç»å¤§äºå­©å­ç»“ç‚¹çš„å€¼ï¼Œåˆ™ç›´æ¥ç»“æŸ
		if temp &gt;= list[child] {
			break
		}

		// æŠŠå­©å­ç»“ç‚¹çš„å€¼èµ‹ç»™çˆ¶ç»“ç‚¹
		list[parent] = list[child]

		// é€‰å–å­©å­ç»“ç‚¹çš„å·¦å­©å­ç»“ç‚¹,ç»§ç»­å‘ä¸‹ç­›é€‰
		parent = child
		child = 2*child + 1
	}

	list[parent] = temp
}

func HeapSort(list []int) {
	// å¾ªç¯å»ºç«‹åˆå§‹å †
	for i := len(list) / 2; i &gt;= 0; i-- {
		heapAdjust(list, i, len(list)-1)
	}

	// è¿›è¡Œn-1æ¬¡å¾ªç¯ï¼Œå®Œæˆæ’åº
	for i := len(list) - 1; i &gt; 0; i-- {
		// æœ€åä¸€ä¸ªå…ƒç´ å’Œç¬¬ä¸€å…ƒç´ è¿›è¡Œäº¤æ¢
		list[0], list[i] = list[i], list[0]

		// ç­›é€‰ R[0] ç»“ç‚¹ï¼Œå¾—åˆ°i-1ä¸ªç»“ç‚¹çš„å †
		heapAdjust(list, 0, i)
	}
}
//endregion
